<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonrombyzheltyykrasnyy"
    android:backgroundTint="@drawable/ic_launcher_background"
    android:backgroundTintMode="screen"
    android:theme="@style/Base.TextAppearance.AppCompat.Body1"
    tools:context="com.project.project.MainActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp">

    getActionBar().setHomeButtonEnabled(true);
    getActionBar().setDisplayHomeAsUpEnabled(true);

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="104dp"
                android:layout_height="63dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_email_black_24dp" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="62dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="107dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="120dp" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/transparent"
        android:text="  I agree with rules of AliExpress free membership"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="283dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star"
        tools:layout_editor_absoluteX="395dp" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="149dp" />

    <LinearLayout android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:background="@color/colorAccent"
        android:text="Push and create"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="358dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="56dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_person_black_24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="149dp" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password (6 symbols and more)"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="222dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="58dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_lock_black_24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="222dp" />

</android.support.constraint.ConstraintLayout>
